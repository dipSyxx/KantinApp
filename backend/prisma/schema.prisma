generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// ─── Enums ───────────────────────────────────────────────

enum Role {
  STUDENT
  CANTEEN_ADMIN
  SCHOOL_ADMIN
  SUPER_ADMIN
}

enum MenuStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum Category {
  MAIN
  VEG
  SOUP
  DESSERT
  OTHER
}

enum ItemStatus {
  ACTIVE
  CHANGED
  SOLD_OUT
}

// ─── Models ──────────────────────────────────────────────

model School {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())

  users     User[]
  dishes    Dish[]
  weekMenus WeekMenu[]

  @@map("schools")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  externalId String?  @unique
  role       Role     @default(STUDENT)
  schoolId   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  school School? @relation(fields: [schoolId], references: [id])
  votes  Vote[]

  @@map("users")
}

model WeekMenu {
  id          String     @id @default(cuid())
  year        Int
  weekNumber  Int
  status      MenuStatus @default(DRAFT)
  publishedAt DateTime?
  schoolId    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  school School   @relation(fields: [schoolId], references: [id])
  days   MenuDay[]

  @@unique([year, weekNumber, schoolId])
  @@map("week_menus")
}

model MenuDay {
  id         String   @id @default(cuid())
  date       DateTime @db.Date
  weekMenuId String
  isOpen     Boolean  @default(true)
  notes      String?
  createdAt  DateTime @default(now())

  weekMenu WeekMenu   @relation(fields: [weekMenuId], references: [id], onDelete: Cascade)
  items    MenuItem[]

  @@unique([weekMenuId, date])
  @@map("menu_days")
}

model Dish {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String?
  allergens   String[] @default([])
  tags        String[] @default([])
  schoolId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  school    School     @relation(fields: [schoolId], references: [id])
  menuItems MenuItem[]

  @@map("dishes")
}

model MenuItem {
  id        String     @id @default(cuid())
  menuDayId String
  dishId    String
  price     Int        @default(50)
  category  Category   @default(MAIN)
  status    ItemStatus @default(ACTIVE)
  sortOrder Int        @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  menuDay MenuDay @relation(fields: [menuDayId], references: [id], onDelete: Cascade)
  dish    Dish    @relation(fields: [dishId], references: [id], onDelete: Cascade)
  votes   Vote[]

  @@map("menu_items")
}

model Vote {
  id         String   @id @default(cuid())
  menuItemId String
  userId     String
  value      Int      // -1 = bad, 0 = ok, +1 = good
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  menuItem MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([menuItemId, userId])
  @@map("votes")
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String   // email
  token      String   // bcrypt hash of 6-digit code
  name       String   // temp store user name
  password   String   // temp store hashed password
  schoolId   String   // school the user is registering for
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier])
  @@map("verification_tokens")
}
